<h1>Listing posts</h1>

<table>
  <tr>
    <th>Poster</th>
    <th>Artist</th>
    <th>Album</th>
    <th>Link</th>
    <th>Comment</th>
    <th>Down</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.poster %></td>
    <td><%= post.artist %></td>
    <td><%= post.album %></td>
    <td><%= post.link %></td>
    <td><%= post.comment %></td>
    <td><%= post.down %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
